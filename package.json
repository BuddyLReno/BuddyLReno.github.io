{
  "name": "buddyreno.me",
  "version": "1.0.0",
  "description": "Personal site of Buddy Reno",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git@github.com:BuddyLReno/buddyreno.me"
  },
  "scripts": {
    "serve": "browser-sync start --server --port 4000",
    "build:styles": "node-sass assets/scss/main.scss assets/css/main.css && postcss -u autoprefixer --autoprefixer.browsers '> 2%, last 2 versions' -r assets/css/main.css",
    "watch": "nodemon -e scss -x \"npm run build:styles\""
  },
  "author": "Buddy Reno",
  "homepage": "http://buddyreno.me",
  "devDependencies": {
    "autoprefixer": "^6.3.4",
    "browser-sync": "^2.11.2",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.2",
    "postcss-cli": "^2.5.1"
  },
  "dependencies": {
    "normalize.css": "^4.0.0"
  }
}
